<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOGS" value="../logs/logging-app" />

    <!-- -->
    <timestamp key="timestamp" datePattern="yyyy-MM-dd" />
    <springProperty name="loggingAppName" scope="context"
                    source="app.logging.name" />
    <property name="PROFILE" value="-${spring.profiles.active}" />
    <!-- -->
    <springProperty name="logFilePattern" scope="context"
                    source="log.file.name.pattern" />
    <springProperty name="logFileName" scope="context"
                    source="app.logging.file.name" />
    <springProperty name="profile" scope="context"
                    source="app.logging.profile" />


    <!-- -->
    <appender name="RollingFile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--<file>${LOGS}/${logFileName}-${timestamp}.log</file>-->

        <!--<<file>${LOGS}-${profile}/${loggingAppName}.log</file>-->
        <file>${logFileName}.log</file>

        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
        </encoder>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <!--<fileNamePattern>${LOGS}/archived/logging-application-%d{yyyy-MM-dd}_%i.log-->
            <fileNamePattern>${LOGS}/archived/${loggingAppName}-%d{yyyy-MM-dd}_%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <!-- LOG everything at INFO level -->
    <root level="info">
        <appender-ref ref="RollingFile" />
        <appender-ref ref="Console" />
    </root>

    <!-- LOG "com.qugenx*" at TRACE level -->
    <logger name="com.qugenx" level="trace" additivity="false">
        <appender-ref ref="RollingFile" />
        <appender-ref ref="Console" />
    </logger>

</configuration>

